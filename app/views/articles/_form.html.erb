<%= simple_form_for([@user, @article]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :brief %>
    <%= f.input :content %>
    <%= f.input :published %>
    <%= f.input :published_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
