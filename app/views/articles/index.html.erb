<h1>Listing articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Brief</th>
      <th>Content</th>
      <th>Published</th>
      <th>Published at</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.brief %></td>
        <td><%= article.content %></td>
        <td><%= article.published %></td>
        <td><%= article.published_at %></td>
        <td><%= article.user %></td>
        <td><%= link_to 'Show', [@user, article] %></td>
        <td><%= link_to 'Edit', edit_user_article_path(@user, article) %></td>
        <td><%= link_to 'Destroy', [@user, article], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

