<%= simple_form_for @product, html: {multipart: true} do |f| %>





  <%= container_tag do %>
    <%= row_tag do %>

      <%= col_6_tag do %>

        <%= f.association :user %>
        <%= f.input :title %>
        <%= f.input :brief %>
        <%= f.input :descr %>
        <%= f.input :price %>
        <%= f.association :category %>
        <%= f.association :tags %>

        <%= f.simple_fields_for :image_files do |img_f| %>
          <%= img_f.input :file, as: :file %>
        <% end %>

        <%= f.input :weight %>

      <% end %>


      <%= f.button :submit %>

    <% end %>
  <% end %>

<% end %>

