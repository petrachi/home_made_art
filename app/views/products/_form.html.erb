<%= simple_form_for @product do |f| %>





  <%= container_tag do %>
    <%= row_tag do %>

      <%= col_6_tag do %>

        <%= f.association :user %>
        <%= f.input :name %>
        <%= f.input :brief %>
        <%= f.input :descr %>
        <%= f.input :price %>
        <%= f.association :category %>
        <%= f.association :tags %>

        <%= f.input :weight %>

      <% end %>


      <%= f.button :submit %>

    <% end %>
  <% end %>

<% end %>
