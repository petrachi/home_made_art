<%= form_tag products_path, method: :get do %>
  <%= text_field_tag :search %>
  <%= button_tag :submit %>
<% end %>

<% @products.each do |product| %>
	<h2>
		<%= product.title %>
	</h2>

  <p>
    <% product.image_files.each do |image_file| %>
      <%= image_tag image_file.file.url %>
    <% end %>
  </p>

  <p>
    Only <%= product.price %>
  </p>

	<p>
		<%= link_to "Details", product, class: :btn %>
	</p>
<% end %>

<%= link_to "New", new_product_path %>
